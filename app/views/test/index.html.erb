<!doctype>
<html>
	<head>
		<title>Hello Loctouch</title>
	</head>
	<body>
		<header>
			<h1>Hello Loctouch</h1>
		</header>
		<div>
			<% if current_user %>
				<p>
					Welcome <%=h link_to image_tag(current_user.avatar_image_url, :alt => current_user.screen_name), current_user.profile_url %> <%=h link_to current_user.screen_name, current_user.profile_url %>!
					<%= link_to 'Sign Out', signout_path %>
				</p>
			<% else %>
				<p>
					<%= link_to 'Sign in with Loctouch', '/auth/loctouch' %>
				</p>
			<% end %>
		</div>
		<footer>
			<address>Kensuke Nagae (@kyanny)</address>
		</footer>
</html>

